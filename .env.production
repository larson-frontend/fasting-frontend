###############################################
# Production Environment Configuration         #
###############################################

NODE_ENV=production

# Always point to the production backend API base
VITE_API_BASE=http://localhost:8080/api

# Mocks are forcibly disabled in production builds regardless of this flag.
VITE_USE_MOCK_DATA=false

# Comma separated list of feature flags to enable for this release
# Example: VITE_ENABLE_FEATURES=detailedNotifications
VITE_ENABLE_FEATURES=

# Log level (default: info). Prefer info or warn in production.
VITE_LOG_LEVEL=info

# Networking safeguards
VITE_REQUEST_TIMEOUT_MS=8000
VITE_HTTP_MAX_RETRIES=2
VITE_HTTP_RETRY_BACKOFF_FACTOR=2
VITE_HTTP_RETRY_BACKOFF_MS=250

